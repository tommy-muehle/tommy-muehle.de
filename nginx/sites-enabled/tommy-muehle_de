server {
  listen 443 ssl http2;

  ssl on;
  ssl_certificate /etc/nginx/certs/tommy-muehle_de.crt;
  ssl_certificate_key /etc/nginx/certs/tommy-muehle_de.key;

  server_name tommy-muehle.de;
  charset utf-8;

  location / {
    proxy_pass http://app:8000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

server {
  listen 80;

  server_name tommy-muehle.de;
  charset utf-8;

  location / {
    return 301 https://$host$request_uri;
  }
}
